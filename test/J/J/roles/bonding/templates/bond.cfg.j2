# mode 0 - round-robin
# mode 1 - active/backup
DEVICE={{ linux_bonding.interface_name }}
NAME={{ linux_bonding.interface_name }}
TYPE=Bond
BONDING_MASTER=yes
IPADDR={{ bonding_ip_address }}
PREFIX=24
GATEWAY={{ bonding_gateway_address }}
DNS1={{  bonding_gateway_address }}
DNS2=8.8.8.8
ONBOOT=yes
BOOTPROTO=none
BONDING_OPTS="mode={{ bonding_mode }} primary={{ linux_bonding.slave_nics[0] }} miimon=100"
ZONE=public


