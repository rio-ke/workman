global:
  slack_api_url: https://hooks.slack.com/services/XXXXXXXX/XXXXXXXX/XXXXXXXX
  sms_api_url: https://api.twilio.com/2010-04-01/Accounts/XXXXXXXX/Messages.json

receivers:
- name: slack
  slack_configs:
  - channel: "#oncall"
- name: sms
  sms_configs:
  - to: "+1XXXXXXXXXX"
- name: email
  email_configs:
  - to: team@example.com

routes:
- match:
    severity: critical
  receiver: slack, sms
- match:
    severity: warning
  receiver: email
